<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Material Components theme -->
    <style name="Theme.Paint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar and background color -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/purple_700</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>